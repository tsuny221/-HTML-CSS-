<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to 'show', book_path(book.id) %></td>
					<td><%= link_to 'edit', edit_book_path(book.id) %></td>
					<td><%= link_to 'destroy', book_path(book.id), method: :delete, data: {confirm: "Are you sure?"} %></td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<h2>New Book</h2>
	<%= form_for (@book) do |f| %>
	<% if @book.errors.any? %>
	<%= @book.errors.count %>件のエラーが発生しました
	<%= @book.errors.full_messages.each do |message| %>
	<%= message %>
	<% end %>
	<% end %>
		<div class="field">
			    <label>Title</label>
			    <%= f.text_field :title %>
		</div>
		 <div class="field">
			    <label>Body</label>
			    <%= f.text_area :body %>
		 </div>
		 <div class="actions">
		    <%= f.submit 'Create Book' %>
		 </div>
	<% end %>