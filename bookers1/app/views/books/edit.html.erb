<h1>Editing Book</h1>
	<%= form_for (@book) do |f| %>
	<% if @book.errors.any? %>
	<%= @book.errors.count %>件のエラーが発生しました
	<%= @book.errors.full_messages.each do |message| %>
	<%= message %>
	<% end %>
	<% end %>
		<div class="field">
		    <label>Title</label>
		    <%= f.text_field :title %>
		 </div>
		 <div class="field">
		    <label>Body</label>
		    <%= f.text_area :body %>
		 </div>
		 <div class="actions">
		    <%= f.submit 'Update Book' %>
		 </div>
	<% end %>
	<%= link_to 'show', book_path(@book.id) %>
	<%= link_to 'Back', books_path %>
