<h1>Editing Book</h1>
	<%= form_for (@book) do |f| %>
		<div class="field">
		    <label>Title</label>
		    <%= f.text_field :title %>
		 </div>
		 <div class="field">
		    <label>Body</label>
		    <%= f.text_area :body %>
		 </div>
		 <div class="actions">
		    <%= f.submit 'Update Book' %>
		 </div>
	<% end %>
	<%= link_to 'show', book_path(@book.id) %>
	<%= link_to 'Back', books_path %>
