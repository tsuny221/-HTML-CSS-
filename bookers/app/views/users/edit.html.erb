 <% if @user.errors.any? %>
  <div id="error_explanation">
    <h3><%= @user.errors.count %>errors prohibited this user from being saved:</h3>
    <ul>
      <%=@user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

	<h2>User info</h2>

	<%= form_for (@user) do |f| %>
		<div class="field">
			    <label>Name</label>
			    <%= f.text_field :name%>
		 </div>
		  <div class="field">
			    <label>Image</label>
			   <%= f.attachment_field :profile_image, placeholder: "プロフィール画像"%>
		 </div>
		 <div class="field">
			    <label>Introduction</label>
			    <%= f.text_area :introduction%>
		 </div>
		 <div class="actions">
		    <%= f.submit 'Update User' %>
		 </div>
	<% end %>

</div>
</div>

