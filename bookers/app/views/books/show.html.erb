        <% if @books.user_id == current_user.id %>
        <td>
        	<%= link_to 'Edit', edit_book_path(@books.id), class:"btn-sm btn-success" %>
        </td>
        <td>
          <%= link_to 'Destroy', book_path(@books.id), method: :delete, data: {confirm: "Are you sure?"}, class:"btn-sm btn-danger"%>
        </td>
        <% end %>

      </tr>
    </tbody>
  </table>

  </div>
</div>
