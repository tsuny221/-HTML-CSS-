    <table class="table">
      <tbody>
      <tr>
        <th>name</th>
        <th><%= @books.user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @books.user.introduction %></th>
      </tr>
</tbody>
</table>

<div class="row">
<%= link_to  "", edit_user_path(@books.user), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_16704" %>
