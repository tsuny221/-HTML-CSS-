<%= render 'books/list', book:@book %>
</div>

  <div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
		  <tbody>
		  	<tr>
        <td>
        	<%= link_to user_path(@books.user) do %>
            <%= attachment_image_tag @books.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size: '100x100'%>
            <% end %>
